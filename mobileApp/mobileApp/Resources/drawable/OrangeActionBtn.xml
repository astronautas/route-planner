<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>
      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#f7bc6f" android:startColor="#fcb150"/>
          <stroke android:width="1dp" android:color="#BABABA"/>
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#fcb150" android:startColor="#f7bc6f"/>
          <stroke android:width="1dp" android:color="#BABABA"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
